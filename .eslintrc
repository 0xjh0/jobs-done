{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:react/recommended"
  ],
  "env": {
    "shared-node-browser": true
  },
  "globals": {
    "global": true
  },
  "overrides": [
    {
      "files": ["**/*.fixture.js"],
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": ["cosmos.config.js", "next.config.js", "webpack.config.js"],
      "env": {
        "node": true
      }
    }
  ]
}
